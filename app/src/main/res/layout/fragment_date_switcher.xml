<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DateSwitcherFragmentXML"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context="com.example.kartikayala.calendardemo.DateSwitcher"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="131dp"
        android:layout_height="match_parent"
        android:text=">"
        android:id="@+id/buttonTomorrow"
        android:layout_row="0"
        android:layout_column="8"
        android:layout_gravity="right|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/DateTitleText"
        android:layout_weight="0.75"
        android:textAlignment="center"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/buttonTomorrow" />

    <Button
        android:layout_width="142dp"
        android:layout_height="match_parent"
        android:text="&lt;"
        android:id="@+id/buttonYesterday"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_toStartOf="@+id/DateTitleText" />
</RelativeLayout>
